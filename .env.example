# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-long-random-string
# Set to False in production, True for development (default: True if not set)
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Encryption key for SMTP passwords (REQUIRED - Must be 32 url-safe base64-encoded bytes)
# Generate a new key with this Python command:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Example output: RKJw8xGzJoaVKMhJzGQrNqP0YXx0K8vZ9tC7BnMxQWE=
# IMPORTANT: Keep this key secure and never commit it to version control!
FIELD_ENCRYPTION_KEY=your-fernet-key-here-generate-with-command-above

# Database Configuration
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Static Files (Optional)
STATIC_ROOT=/path/to/staticfiles

